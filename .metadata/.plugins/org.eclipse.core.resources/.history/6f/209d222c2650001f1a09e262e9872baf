//	                stage.setScene(new Scene(root));
//	                stage.show();
//	            } catch (IOException e) {
//	                System.out.println("OpenUp function failed");
//	                e.printStackTrace();
//	            }
//	        });
	    }			
			
		
			
		public void exitApp(ActionEvent event) throws Exception {
			
			System.exit(0);
		
		}
			
			
			
	
		
		
		

	
}